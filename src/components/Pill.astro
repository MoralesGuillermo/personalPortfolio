---
import { Icon } from "astro-icon/components";

const {name, text, color} = Astro.props;
---


<span class="rounded-full px-3 py-1 bg-stone-900 text-stone-50 m-1 inline-flex items-center">
    <span style=`color: ${color}` class="px-1">
        <Icon name={name} width="35" height="35" class="inline"/>
    </span>
    <small class="text-sm px-1 font-semibold">{text}</small>
</span>
